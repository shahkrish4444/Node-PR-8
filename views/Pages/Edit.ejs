<%- include('../partials/Header.ejs') -%>
    <div class="page-wrapper mt-80 p-4">
        <form action="/product/edit/<%= productId %>" method="post">
            <h2 class="text-light mb-4">Edit Product</h2>
            <input type="text" class="form-control mb-3" name="title" placeholder="NAME" value="<%= product.title %>">
            <textarea name="description" class="form-control mb-3" id="" cols="30" rows="10"
                placeholder="DESCRIPTION"><%= product.description %></textarea>
            <input type="number" class="form-control mb-3" name="price" placeholder="PRIZE" value="<%= product.price %>">
            <select name="extrCatId" class="form-select mb-3" id="">
                <% extaradata.forEach((val) => { %>
                    <option value="<%= val._id %>" <% if (val._id.toString() === product.extraCategoryId.toString()) { %> selected <% } %>>
                        <%= val.name %> - <%= val.subCategoryId.name %> - <%= val.subCategoryId.categoryId.name %>
                    </option>
                <% }) %>
            </select>
            <button class="btn btn-light">UPDATE</button> 
        </form>
    </div>
<%- include('../partials/Footer.ejs') -%>
